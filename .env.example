# Copy this to .env and fill in your values
OPENAI_API_KEY=your_openai_api_key_here
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret_here

# AES Encryption Key (generate with /api/encryption/generate-key)
# This should be a secure, randomly generated key for data encryption
ENCRYPTION_KEY=your_secure_encryption_key_here

# Flask configuration
FLASK_ENV=production
FLASK_SECRET_KEY=your_flask_secret_key_here
PORT=5000

# Optional: Database URL for production (PostgreSQL)
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Additional API keys (these can also be stored encrypted via API)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
